<table>
    <thead>
        <tr>
            <td></td>
            <th class="legend" colspan="8" data-sortInitialOrder="desc">This Season</th>
            <th class="legend" colspan="8" data-sortInitialOrder="desc">All Time</th>
        </tr>
        <tr>
            <td></td>
            <th class="legend" colspan="3" data-sortInitialOrder="desc"># Decks</th>
            <th class="legend" colspan="3" data-sortInitialOrder="desc"># Cards</th>
            <td></td>
            <td class="divider"></td>
            <th class="legend" colspan="3" data-sortInitialOrder="desc"># Decks</th>
            <th class="legend" colspan="3" data-sortInitialOrder="desc"># Cards</th>
            <td></td>
            <td></td>
        <tr>
        <tr>
            <th>Card</th>
            <th data-sortInitialOrder="desc">Total</th>
            <th data-sortInitialOrder="desc">Main</th>
            <th data-sortInitialOrder="desc">Side</th>
            <th data-sortInitialOrder="desc">Total</th>
            <th data-sortInitialOrder="desc">Main</th>
            <th data-sortInitialOrder="desc">Side</th>
            <th data-sortInitialOrder="desc">Record</th>
            <th class="divider" data-sortInitialOrder="desc">Win %</th>
            <th data-sortInitialOrder="desc">Total</th>
            <th data-sortInitialOrder="desc">Main</th>
            <th data-sortInitialOrder="desc">Side</th>
            <th data-sortInitialOrder="desc">Total</th>
            <th data-sortInitialOrder="desc">Main</th>
            <th data-sortInitialOrder="desc">Side</th>
            <th data-sortInitialOrder="desc">Record</th>
            <th data-sortInitialOrder="desc">Win %</th>
        </tr>
    </thead>
    <tbody>
        {{#cards}}
            <tr>
                <td>{{> singlecard}}</td>
                <td class="n">{{season_num_decks}}</td>
                <td class="n">{{season_n_maindecks}}</td>
                <td class="n divider">{{season_n_sideboards}}</td>
                <td class="n">{{season_count_decks}}</td>
                <td class="n">{{season_count_maindecks}}</td>
                <td class="n divider">{{season_count_sideboards}}</td>
                <td class="n">{{#season_show_record}}{{season_wins}}–{{season_losses}}{{#season_draws}}–{{season_draws}}{{/season_draws}}{{/season_show_record}}</td>
                <td class="n divider">{{#season_show_record}}{{season_win_percent}}{{/season_show_record}}</td>
                <td class="n">{{all_num_decks}}</td>
                <td class="n">{{all_n_maindecks}}</td>
                <td class="n divider">{{all_n_sideboards}}</td>
                <td class="n">{{all_count_decks}}</td>
                <td class="n">{{all_count_maindecks}}</td>
                <td class="n divider">{{all_count_sideboards}}</td>
                <td class="n">{{#all_show_record}}{{all_wins}}–{{all_losses}}{{#all_draws}}–{{all_draws}}{{/all_draws}}{{/all_show_record}}</td>
                <td class="n">{{#all_show_record}}{{all_win_percent}}{{/all_show_record}}</td>
            </tr>
        {{/cards}}
    </tbody>
</table>
