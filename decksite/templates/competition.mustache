<div class="banner">
    <div class="title">
        <h1>{{name}}</h1>
    </div>
    {{^league}}
        <ul class="buttons">
            <li><a title="View competition source ({{type}})" class="external" href="{{url}}">Source</a></li>
        </ul>
    {{/league}}
</div>
<section>
    <h2>Decks</h2>
    {{#league}}
        <p>Sponsored by <a class="external" href="http:///www.mtgotraders.com/">MTGO Traders</a>. (<a href="{{league_info_url}}">League Info</a>.)</p>
    {{/league}}
    {{#ends}}<p><i>Ends {{ends}}.</i></p>{{/ends}}
    {{> decktable}}
</section>
{{#has_leaderboard}}
    <section>
        <h2>Leaderboard</h2>
        {{> spinner}}
        <table class="with-marginalia">
            <thead>
                <tr>
                    <td></td>
                    <th>Person</th>
                    <th data-sortInitialOrder="desc">Points</th>
                </tr>
            </thead>
            <tbody>
                {{#leaderboard}}
                    <tr class="pos-{{pos}}">
                        <td class="n marginalia">
                            {{position}}
                        </td>
                        <td><a href="{{url}}">{{person}}</a></td>
                        <td class="n">{{points}}</td>
                    </tr>
                {{/leaderboard}}
            </tbody>
        </table>
    </section>
{{/has_leaderboard}}
