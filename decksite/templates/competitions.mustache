<section>
    <h2>Competitions</h2>
    <table>

        <thead>
            <th>Competition</th>
            <th>Entries</th>
            <th>Date</th>
        </thead>
        <tbody>
                {{#competitions}}
                <tr>
                    <td><a href="{{competition_url}}">{{{name}}}</a></td>
                    <td class="n"><a href="{{competition_url}}">{{{num_decks}}}</a></td>
                    <td class="n" data-text="{{date_sort}}"><a href="{{competition_url}}">{{{display_date}}}</a></td>
                </tr>
            {{/competitions}}
        </tbody>
    </table>
</section>
