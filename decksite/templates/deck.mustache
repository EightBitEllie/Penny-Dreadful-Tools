<section>
    <h2>{{name}} by <a href="{{person_url}}">{{person}}</a></h2>
    {{#sections}}
        {{> section}}
    {{/sections}}
</section>
<section>
    <h2>Mana Costs</h2>
    <img src="{{cmc_chart_url}}" width="200">
</section>
{{#has_matches}}
    <section>
        <h2>League</h2>
        <table>
            <thead>
                <tr>
                    <th data-sortInitialOrder="desc">Result</th>
                    <th>Versus</th>
                    <th>Opponent</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {{#matches}}
                    <tr>
                        <td class="n">{{game_wins}}â€“{{game_losses}}</td>
                        <td><a href="{{opponent_deck_url}}">{{opponent_deck_name}}</a></td>
                        <td><a href="{{opponent_url}}">{{opponent}}</a></td>
                        <td>{{display_date}}</td>
                    </tr>
                {{/matches}}
            </tbody>
        </table>
    </section>
{{/has_matches}}
{{#competition_id}}
    <section>
        <h2>Competition</h2>
        <table class="with-marginalia">
            <thead>
                <tr>
                    <td></td>
                    <th>Competition</th>
                    <th>Record</th>
                    <th class="c">Top 8</th>
                    {{#show_omw}}<th>OMW</th>{{/show_omw}}
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="marginalia">{{stars}}</td>
                    <td><a href="{{competition_url}}">{{competition_name}}</a></td>
                    <td class="n" ><ahref="{{competition_url}}">{{> record}}</a></td>
                    <td class="c"><a href="{{competition_url}}">{{top8}}</a></td>
                    {{#show_omw}}<td class="n"><a href="{{competition_url}}">{{omw}}</a></td>{{/show_omw}}
                </tr>
            </tbody>
        </table>
    </section>
{{/competition_id}}
{{#has_similar}}
    <section>
        <h2>Similar Decks</h2>
        {{> decktable}}
    </section>
{{/has_similar}}
<section>
    <h2>Notes</h2>
    {{#archetype_id}}<p>Archetype: <a href="{{archetype_url}}">{{archetype_name}}</a></p>{{/archetype_id}}
    <p>Source: <a href="{{source_url}}">{{source_name}}</a></p>
    <p>Export: <a href="{{export_url}}">MTGO (txt)</a></p>
</section>
{{> legal}}