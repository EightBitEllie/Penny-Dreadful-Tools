<section>
    <h2>{{name}} by <a href="{{person_url}}">{{person}}</a></h2>
    {{#sections}}
        {{> section}}
    {{/sections}}
</section>
{{#has_record}}
    <section>
        <h2>Competition</h2>
        {{#competition_id}}
            <ul><a href="{{competition_url}}">
                {{stars}}
                {{competition_name}}
                (Piloted by {{person}})
                {{wins}}–{{losses}}{{#draws}}–{{draws}}{{/draws}}
                {{top8}}
            </a></ul>
        {{/competition_id}}
        {{#twins}}
            {{#competition_id}}
                <ul><a href="{{competition_url}}">
                    {{stars}}
                    {{competition_name}}
                    (Piloted by {{person}})
                    {{wins}}–{{losses}}{{#draws}}–{{draws}}{{/draws}}
                    {{top8}}
                </a></ul>
            {{/competition_id}}
        {{/twins}}
    </section>
{{/has_record}}
<section>
    <h2>Notes</h2>
    <p>Source: <a href="{{source_url}}">{{source_name}}</a></p>
    <p>Export: <a href="{{export_url}}">MTGO (txt)</a></p>
</section>
{{> legal}}