<section>
    <h2>{{name}} by <a href="{{person_url}}">{{person}}</a></h2>
    {{#sections}}
        {{> section}}
    {{/sections}}
</section>
{{#competition_id}}
    <section>
        <h2>Competition</h2>
        <a href="{{competition_url}}">
            {{stars}}
            {{competition_name}}
            {{wins}}–{{losses}}{{#draws}}–{{draws}}{{/draws}}
            {{#finish}}{{finish}}/{{players}}{{/finish}}
            {{top8}}
        </a>
    </section>
{{/competition_id}}
<section>
    <h2>Notes</h2>
    <p>This deck is {{^pd_legal}}<b>not</b> {{/pd_legal}}currently Penny Dreadful legal.</p>
    <p>Legal in:</p>
    <ul>
        {{#legal_formats}}<li>{{.}}</li>{{/legal_formats}}
    </ul>
    <p>Source: <a href="{{source_url}}">{{source_name}}</a></p>
    <p>Export: <a href="{{export_url}}">MTGO (txt)</a></p>
</section>
