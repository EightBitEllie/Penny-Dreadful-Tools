<table class="fade-repeats">
    <thead>
        <tr>
            <th class="marginalia" data-sortInitialOrder="desc">↕</th>
            <th>Colors</th>
            <th>Name</th>
            <th>Person</th>
            <th>Source</th>
            <th data-empty="bottom" data-sortInitialOrder="desc">Record</th>
            <th class="c">Top 8</th>
            <th data-sortInitialOrder="desc">Date</th>
            <th>Season</th>
        </tr>
    </thead>
    <tbody>
        {{#decks}}
            <tr>
                <td class="marginalia">{{stars}}</td>
                <td>{{{colors_safe}}}</td>
                <td><a href="{{url}}">{{{name}}}</a></td>
                <td><a href="{{person_url}}">{{person}}</a></td>
                <td {{#source_sort}}data-text="{{source_sort}}"{{/source_sort}}>
                    {{#competition_url}}<a href="{{competition_url}}">{{/competition_url}}
                    {{{source_indicator}}}
                    {{#competition_url}}</a>{{/competition_url}}
                </td>
                <td class="n">
                    {{#competition_url}}<a href="{{competition_url}}">{{/competition_url}}
                    {{#show_record}}{{wins}}–{{losses}}{{#draws}}–{{draws}}{{/draws}}{{/show_record}}
                    {{#competition_url}}</a>{{/competition_url}}
                </td>
                <td class="c">
                    {{#top8}}<a href="{{competition_url}}">{{/top8}}
                    {{top8}}
                    {{#top8}}</a>{{/top8}}
                </td>
                <td class="n" data-text="{{date_sort}}">
                    {{display_date}}
                </td>
                <td>
                    {{#has_legal_format}}
                        {{{legal_icons}}}
                    {{/has_legal_format}}
                </td>
            </tr>
        {{/decks}}
    </tbody>
</table>
