<section>
<h2>Queue</h2>
    <form method="post" class="inline">
        <table>
            {{#queue}}
                <tr>
                    <td><a href="{{url}}">{{name}} ({{id}})</a></td>
                    <td>
                        {{#suggestion}}<a href="{{url}}">{{name}} ({{id}})</a>{{/suggestion}}
                    </td>
                    <td>
                        {{#suggestion}}<a href="{{archetype_url}}">{{archetype_name}} ({{archetype_id}})</a>{{/suggestion}}
                        {{^suggestion}}No suggestion{{/suggestion}}
                    </td>
                    <td>
                        <input type="hidden" name="deck_id" value="{{id}}">
                        <select name="archetype_id">
                            <option value="">[Select]</option>
                            {{#archetypes}}
                                <option value="{{id}}">{{name}}</option>
                            {{/archetypes}}
                        </select>
                    </td>
                </tr>
            {{/queue}}
        </table>
        <input type="submit" value="Assign">
</form>

<h2>Assign Decks</h2>

<form method="post">
    <div class="field">
        <select name="deck_id">
            {{#decks}}
                <option value="{{id}}">{{name}} ({{archetype_name}})</option>
            {{/decks}}
        </select>
    </div>
    <div class="field">
        <select name="archetype_id">
            {{#archetypes}}
                <option value="{{id}}">{{name}}</option>
            {{/archetypes}}
        </select>
    </div>
    <div class="field">
        <input type="submit" value="Assign">
    </div>
</form>

<table>
    {{#roots}}
        {{#archetype_tree}}
            <tr class="archetype archetype-{{depth}}">
                <td class="initial primary"><a href="{{url}}">{{name}}</a></td>
                <td>
                    <form method="post" class="inline">
                        <input type="hidden" name="parent" value="{{id}}">
                        <div class="field">
                            <input type="text" name="name">
                            <input type="submit" value="Add">
                        </div>
                    </form>
                </td>
            </tr>
        {{/archetype_tree}}
    {{/roots}}
</table>