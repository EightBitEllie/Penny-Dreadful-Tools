<section>
    <h1>Latest Decks</h1>
    {{> decktable}}
    <a href="{{decks_url}}">More decks …</a>
</section>
<section>
    <h1>Top Cards</h1>
    <section>
        <h2>This Season</h2>
        {{> spinner}}
        <table>
            <thead>
                <th>Card</th>
                <th># Decks</th>
                <th>Record</th>
                <th>Win %</th>
            </thead>
            <tbody>
                {{#top_cards}}
                    <tr>
                        <td>{{> singlecard}}</td>
                        <td class="n">{{season_num_decks}}</td>
                        <td class="n">{{season_wins}}–{{season_losses}}{{#season_draws}}–{{season_draws}}{{/season_draws}}</td>
                        <td class="n">{{season_win_percent}}</td>
                    </tr>
                {{/top_cards}}
            </tbody>
        </table>
        <p><a href="{{cards_url}}">More cards …</a></p>
    </section>
    <section>
        <h2>This Week</h2>
        {{> spinner}}
        <table>
            <thead>
                <th>Card</th>
                <th># Decks</th>
                <th>Record</th>
                <th>Win %</th>
            </thead>
            <tbody>
                {{#week_cards}}
                    <tr>
                        <td>{{> singlecard}}</td>
                        <td class="n">{{week_num_decks}}</td>
                        <td class="n">{{week_wins}}–{{week_losses}}{{#week_draws}}–{{week_draws}}{{/week_draws}}</td>
                        <td class="n">{{week_win_percent}}</td>
                    </tr>
                {{/week_cards}}
            </tbody>
        </table>
    </section>
    <section>
        <h2>Fastest Rising</h2>
        {{> spinner}}
        <table>
            <thead>
                <th>Card</th>
                <th># Decks</th>
                <th>Record</th>
                <th>Win %</th>
            </thead>
            <tbody>
                {{#rising_cards}}
                    <tr>
                        <td>{{> singlecard}}</td>
                        <td class="n">{{week_num_decks}}</td>
                        <td class="n">{{week_wins}}–{{week_losses}}{{#week_draws}}–{{week_draws}}{{/week_draws}}</td>
                        <td class="n">{{week_win_percent}}</td>
                    </tr>
                {{/rising_cards}}
            </tbody>
        </table>
    </section>
</section>
