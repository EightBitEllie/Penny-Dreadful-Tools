<h1>Matchup Calculator</h1>
{{#results}}
    <section>
        <h2>Results</h2>
        <p>{{results.wins}}–{{results.losses}}–{{results.draws}}</p>
    </section>
{{/results}}
<section>
    <h2>Query</h2>
    <form>
        <div>
            <label for="season_id">Season</label>
            <select name="season_id">
                <option value="">[Select]</option>
                {{#seasons}}
                    <option value="{{num}}" {{#selected}}selected="selected"{{/selected}}>{{name}}</option>
                {{/seasons}}
            </select>
        </div>
        {{#criteria}}
            <div>
                <p>Criteria {{n}}</p>
                {{> chooser}}
            </div>
        {{/criteria}}
        <button type="submit">Calculate</button>
    </form>
</section>
