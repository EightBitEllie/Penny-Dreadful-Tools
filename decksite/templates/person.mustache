<h1>{{name}}</h1>
<section>
    <h2>Decks</h2>
    {{> decktable}}
</section>
{{#has_only_played_cards}}
    <section>
        <h2>Unique Cards Played</h2>
        <ul>
            {{#only_played_cards}}
                <li>{{> singlecard}}</li>
            {{/only_played_cards}}
        </ul>
    </section>
{{/has_only_played_cards}}
{{#achievements}}
    <section>
        <h2>Achievements</h2>
        <ul class="buttons">
            {{#tournament_wins}}
                <li title="{{tournament_wins}} Wins">Tournament Winner</li>
            {{/tournament_wins}}
            {{#tournament_entries}}
                <li title="{{tournament_entries}} Entries">Tournament Player</li>
            {{/tournament_entries}}
            {{#perfect_runs}}
                <li title="{{perfect_runs}} Perfect Runs">Perfect League Run</li>
            {{/perfect_runs}}
            {{#league_entries}}
                <li title="{{league_entries}} Entries">League Player</li>
            {{/league_entries}}
        </ul>
    </section>
{{/achievements}}
<section>
    <h2>Cards</h2>
    {{> cardstable}}
</section>
