<h1>Player Notes</h1>
<table>
    <thead>
        <tr>
            <th>Subject</th>
            <th>Creator</th>
            <th>Date</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        {{#notes}}
            <tr class="wide">
                <td>{{subject}}</td>
                <td>{{creator}}</td>
                <td>{{display_date}}</td>
                <td class="wide">{{note}}</td>
            </tr>
        {{/notes}}
    </tbody>
</table>
<section>
    <h2>Add Note</h2>
    <form method="post">
        <div>
            <label for="subject_id">Person</label>
            <select name="subject_id">
                <option value="">[Select]</option>
                {{#people}}
                    <option value="{{id}}">{{mtgo_username}} (to:{{tappedout_username}},
 mtgg:{{mtggoldfish_username}}, discord: {{discord_id}})</option>
                {{/people}}
            </select>
        </div>
        <div>
            <label for="note">Note</label>
            <textarea name="note"></textarea>
        </div>
        <button type="submit">Add Note</button>
    </form>
</section>
