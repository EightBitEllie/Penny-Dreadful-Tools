<section>
    <h2>Rotation</h2>
    <p>{{runs}} ({{runs_percent}}%) of 168 runs completed.</p>
    <table>
        <thead>
            <tr>
                <th>Card</th>
                <th>Hits</th>
                <th>Needed</th>
                <th>Status</th>
        </thead>
        <tbody>
            {{#cards}}
                <tr>
                    <td><a href="{{url}}" class="{{^pd_legal}}illegal{{/pd_legal}} card">{{name}}</a></td>
                    <td class="n">{{hits}} ({{percent}}%)</td>
                    <td class="n">{{hits_needed}} ({{percent_hits_needed}}%)</td>
                    <td>{{status}}</td>
                </tr>
            {{/cards}}
        </tbody>
    </table>
</section>
