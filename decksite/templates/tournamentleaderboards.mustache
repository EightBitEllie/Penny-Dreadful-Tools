<h1>Tournament Series Leaderboards</h1>
{{#series}}
    <section>
        <h2>{{competition_series_name}} {{#sponsor_name}}🏆{{/sponsor_name}}</h2>
        {{> spinner}}
        <table class="with-marginalia">
            <thead>
                <tr>
                    <td></td>
                    <th>Person</th>
                    <th class="n" data-sortInitialOrder="desc">#</th>
                    <th class="n" data-sortInitialOrder="desc">Wins</th>
                    <th class="n" data-sortInitialOrder="desc">Pts</th>
                </tr>
            </thead>
            <tbody>
                {{#entries}}
                    <tr class="pos-{{pos}}">
                        <td class="n marginalia">
                            {{position}}
                        </td>
                        <td><a href="{{url}}">{{person}}</a></td>
                        <td class="n">{{tournaments}}</td>
                        <td class="n">{{wins}}</td>
                        <td class="n">{{points}}</td>
                    </tr>
                {{/entries}}
            </tbody>
        </table>
    </section>
{{/series}}
<section>
    <h2>Prizes</h2>
    <p>Leaderboards marked with 🏆 award <a class="external" href="https://cardhoarder.com/">Cardhoarder</a> credit at the end of the season.</p>
    {{> spinner}}
    <table>
        <thead>
            <tr>
                <th class="n">Finish</th>
                <th class="n">Prize</th>
            </tr>
        </thead>
        <tbody>
            {{#prizes}}
                <tr>
                    <td class="n">{{finish}}</td>
                    <td class="n">{{prize}} tix</td>
                </tr>
            {{/prizes}}
        </tbody>
    </table>
</section>
