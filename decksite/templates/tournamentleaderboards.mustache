<h1>MTGO Traders League Leaderboards</h1>
{{#tournaments}}
    <section>
        <h2>{{name}}</h2>
        {{> spinner}}
        <table class="with-marginalia">
            <thead>
                <tr>
                    <td></td>
                    <th>Person</th>
                    <th data-sortInitialOrder="desc">Points</th>
                </tr>
            </thead>
            <tbody>
                {{#leaderboard}}
                    <tr class="pos-{{pos}}">
                        <td class="n marginalia">
                            {{position}}
                        </td>
                        <td><a href="{{url}}">{{person}}</a></td>
                        <td class="n">{{points}}</td>
                    </tr>
                {{/leaderboard}}
            </tbody>
        </table>
    </section>
{{/tournaments}}
<section>
    <h2>First Run Prize</h2>
    <p>Regardless of results when you complete your first ever complete run of five matches you will earn 1 tik credit with MTGO Traders.</p>
</section>

